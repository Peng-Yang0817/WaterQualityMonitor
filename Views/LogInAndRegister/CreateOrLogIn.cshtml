@model TestProject.Models.Auth001
@{
    ViewBag.Title = "Create";
}
<style>
    .CreateAccount {
        float: left;
        background-color: #f2f2f2;
        padding-top: 15px;
        padding-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid #adb9c9;
        border-radius: 50px;
        width: 60%
    }

    .LogInAccount {
        float: right;
        background-color: #f2f2f2;
        padding-top: 15px;
        padding-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid #adb9c9;
        border-radius: 50px;
        width: 30%
    }


    label {
        font-size: 15px;
    }

    input {
        font-size: 15px;
        width: 110%;
    }

    .btn-primary {
        font-size: 18px;
        margin-top: 20px;
        background-color: #1ba1e2;
        width: 150px;
        border-radius: 0px;
        border-top-left-radius: 20px;
        border-bottom-right-radius: 20px;
    }

    td {
        padding: 8px 40px;
    }

    h2 {
        font-weight: bold;
        line-height: 15px;
        letter-spacing: 5px;
        margin-bottom: 20px;
    }


    .CreateAccountMoblie {
        word-break:break-all;
        background-color: #f2f2f2;
        padding-top: 15px;
        padding-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid #adb9c9;
        border-radius: 50px;
        width: 80%
    }

    .LogInAccountMobile {
        margin-top:5%;
        word-break: break-all;
        background-color: #f2f2f2;
        padding-top: 15px;
        padding-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid #adb9c9;
        border-radius: 50px;
        width: 80%
    }

    .CreateLogin_D2 {
        margin-left:10%;
        width: 100%;
        display: flex;
        /* 水平置中 */
        justify-content: center;
        /* 垂直置中 */
        align-content: center;
        flex-wrap: wrap;
    }

    @@media only screen and (max-width:1000px) {
        .CreateLogin_D1 {
            display: none;
        }

        .CreateLogin_D2 {
            display: block;
        }
    }

    @@media only screen and (min-width:1000px) {
        .CreateLogin_D1 {
            display: block;
        }

        .CreateLogin_D2 {
            display: none;
        }
    }
