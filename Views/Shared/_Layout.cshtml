<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>魚缸水質監控網</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
