@{
    ViewBag.Title = "MobileUserLogInFirst";
}

<title>登入</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    /* 基本樣式 */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* 表單樣式 */
    form {
        margin: 50px auto;
        max-width: 300px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    /* 輸入欄樣式 */
    input[type=email], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* 按鈕樣式 */
    button[type=submit] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }

        button[type=submit]:hover {
            background-color: #45a049;
        }
</style>

<form method="post" action="/MobileService/BindLineNotifyNeedLogInFirst">
    <h2>登入</h2>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" placeholder="請輸入您的Email" required>
    <label for="password">密碼:</label>
    <input type="password" id="password" name="password" placeholder="請輸入您的密碼" required>
    <button type="submit">登入</button>
</form>

@{
    if (base.TempData["Email"] != null)
    {
        <script>
            window.onload = function () {
                alert("Email或密碼錯誤! 請再做確認.");
            }
        </script>
    }
}